<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista.LlistaEventsActivity">
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="57dp"
        android:gravity="center">
        <Button
            android:id="@+id/calendarButt"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:icon="@drawable/ic_action_name_3"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="calendarAction"
            android:text="CAL" />
        <Button
            android:id="@+id/semanalButt"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:icon="@drawable/ic_action_name_3"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="semanalAction"
            android:text="SEM" />
        <Button
            android:id="@+id/dailyButt"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:icon="@drawable/ic_action_name_3"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="dailyAction"
            android:text="DIA" />
        <Button
            android:id="@+id/ListButt"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:icon="@drawable/ic_action_name_3"
            android:textColor="@color/colorLogo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="LIS" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Ordenar por:"
            android:textSize="15dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/spinner_orden"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerllista"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>